<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:layout_marginTop="20dp"
    app:cardBackgroundColor="#0067F5"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.117">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/all_certificate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="All Certificates"
                        android:textAlignment="center"
                        android:textColor="#2E83F7"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/currency_iv"
                        android:layout_width="12dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="40dp"
                        android:src="@drawable/nigeria_currency"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/value_tv"
                        app:layout_constraintTop_toTopOf="@id/value_tv" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginStart="-2dp"
                        android:layout_marginTop="4dp"
                        android:text=".09"
                        android:textColor="#2E83F7"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/value_tv"
                        app:layout_constraintEnd_toEndOf="@+id/all_certificate_tv"
                        app:layout_constraintHorizontal_bias="0.163"
                        app:layout_constraintStart_toEndOf="@id/value_tv"
                        app:layout_constraintTop_toTopOf="@id/value_tv" />

                    <TextView
                        android:id="@+id/value_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="12dp"
                        android:text="1,598,340"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/all_certificate_tv"
                        app:layout_constraintTop_toBottomOf="@id/all_certificate_tv"
                        app:layout_constraintVertical_bias="0.0" />

                    <me.relex.circleindicator.CircleIndicator3
                        android:id="@+id/indicator"
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/value_tv" />


                </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

